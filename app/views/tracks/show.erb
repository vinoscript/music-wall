<h1><%= @track.song_title %></h1>

<div>
  <p>Artist: <%= @track.author %></p>

  <p><%= @track.url  %></p>

  <p><small>Posted by: <%= @track.user.name %> at: <%= @track.created_at %></small></p>
</div>

<hr/>

<div>
  <h4>Other TRACKS submitted by this User:</h4>

  <% @other_tracks_by_user.each do |track| %>
    <p><small>
      <strong><a href="/tracks/<%= track.id %>"><%= track.song_title %></a></strong>   
      <a href="http://<%= track.url %>"><%= track.url %></a>
      Posted by: <%= track.user.name %> at: <%= track.created_at %>
    </small></p>
  <% end %>

</div>


<hr/>
<a href="/tracks">Back to All TRACKS</a>

