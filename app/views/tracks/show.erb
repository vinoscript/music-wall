<hr/>

<div>
  <h1>"<%= @track.song_title %>"</h1>
  <span>Artist: <%= @track.author %></span>
  <span><%= @track.url  %></span>
  <p><small>Posted by: <%= @track.user.name %> at: <%= @track.created_at %></small></p>

  <span> CURRENT SCORE: <%= @vote_score %> </span>
  <form method="POST" action="/vote">      
    <input type="hidden" name="song" value="<%= @track.id %>">
    <input class="btn btn-success" type="submit" name="vote" value="Upvote">
    <input class="btn btn-danger" type="submit" name="vote" value="Downvote">
  </form>

</div>

<hr/>

<div>
  <h4>Other TRACKS submitted by this User:</h4>

  <% @other_tracks_by_user.each do |track| %>
    <p><small>
      <strong><a href="/tracks/<%= track.id %>"><%= track.song_title %></a></strong>   
      <a href="http://<%= track.url %>"><%= track.url %></a>
      Posted by: <%= track.user.name %> at: <%= track.created_at %>
    </small></p>
  <% end %>

</div>




